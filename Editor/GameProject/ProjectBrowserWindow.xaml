<Window x:Class="Editor.GameProject.ProjectBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor.GameProject"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Project Browser" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
        </Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
			<ToggleButton Content="Open Project" x:Name="OpenProjectBtn" FontSize="32" Click="OnToggleBtnClick" IsChecked="True"/>
			<ToggleButton Content="Create Project" x:Name="CreateProjectBtn" FontSize="32" Margin="30,0,0,0" Click="OnToggleBtnClick"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal" Grid.Row="1" x:Name="BrowserContent">
			<local:OpenProjectView/>
			<local:CreateProjectView/>
		</StackPanel>
    </Grid>
</Window>
